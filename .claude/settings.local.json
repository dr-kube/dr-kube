{
  "permissions": {
    "allow": [
      "Bash(*)",
      "Bash(gh label create:*)"
    ],
    "deny": [
      "Bash(kubectl apply:*)",
      "Bash(kubectl create:*)",
      "Bash(kubectl delete:*)",
      "Bash(kubectl patch:*)",
      "Bash(kubectl edit:*)",
      "Bash(kubectl replace:*)",
      "Bash(kubectl set:*)",
      "Bash(helm install:*)",
      "Bash(helm upgrade:*)",
      "Bash(helm uninstall:*)",
      "Bash(helm rollback:*)",
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -f:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "defaultMode": "bypassPermissions"
  }
}

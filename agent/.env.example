# LLM 프로바이더 설정
# [ollama] (기본값) or [gemini]
LLM_PROVIDER=ollama

# Ollama 설정 (LLM_PROVIDER=ollama일 때)
OLLAMA_MODEL=qwen2.5:14b

# Gemini 설정 (LLM_PROVIDER=gemini일 때)
GEMINI_API_KEY=your-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# 웹훅 서버 설정
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
AUTO_PR=false

# 비용 보호 설정
# 하루 LLM 호출 상한 (UTC 기준)
MAX_LLM_CALLS_PER_DAY=20
# 동일 fingerprint 재처리 쿨다운(분)
DEDUP_COOLDOWN_MINUTES=60
# 같은 대상(values 파일/리소스)에 대한 PR 재생성 쿨다운(분)
PR_GROUP_COOLDOWN_MINUTES=180
# PR 모드에서 webhook 1회당 최대 처리 건수(권장 1)
MAX_ISSUES_PER_WEBHOOK_WITH_PR=1

# 비용 운영 모드
# normal | high | unlimited
COST_MODE=normal

# high 모드 기본값
HIGH_MAX_LLM_CALLS_PER_DAY=200
HIGH_DEDUP_COOLDOWN_MINUTES=10

# 임시 오버라이드 (예: 대형 장애 대응)
# OVERRIDE_UNTIL_UTC=2026-02-15T12:00:00Z
# OVERRIDE_COST_MODE=high

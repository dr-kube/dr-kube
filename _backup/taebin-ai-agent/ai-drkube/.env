# Google Gemini API 키
# GOOGLE_API_KEY=your-gemini-api-key-here
GOOGLE_API_KEY="AIzaSyC8JGNoL_k1vOgLBLJHXXV9uQf_MWXmFOA"

# Kubernetes 설정
# KUBECONFIG_PATH는 기본 경로(~/.kube/config)를 사용하거나 절대 경로 지정
# KUBECONFIG_PATH=/path/to/kubeconfig
KUBECONFIG_PATH="/Users/anwlahwl/.kube/config"

# Agent 기본 설정
KUBERNETES_NAMESPACE=default
AGENT_NAME=drkube-agent
LOG_LEVEL=INFO

# Agent 동작 설정
MAX_RETRIES=3
AUTO_REMEDIATION=false  # 자동 조치 활성화 여부 (주의: 프로덕션에서는 false 권장)

# LangGraph 설정
MAX_ITERATIONS=50  # 최대 반복 횟수
TIMEOUT_SECONDS=300  # 타임아웃 (초)

# ============================================
# 로그 분석 에이전트 설정 (tools/log_analysis_agent.py)
# ============================================

# Gemini 모델 설정
# MODEL_NAME=gemini-pro  # 사용할 Gemini 모델 이름 (gemini-pro, gemini-pro-vision 등)
MODEL_NAME="gemini-2.5-flash"

# Git 저장소 설정
REPO_PATH=.  # Git 저장소 경로 (기본값: 현재 디렉토리)

# 시뮬레이션 모드 설정
SIMULATE=false  # true: 시뮬레이션 모드 (파일 변경 없음), false: 실제 파일 변경 및 커밋 수행
# 주의: 프로덕션 환경에서는 true로 설정하여 생성된 파일을 검토한 후 수동으로 적용하는 것을 권장합니다

# 자동 승인 설정
AUTO_APPROVE=false  # true: 분석 결과 자동 승인, false: 사용자 승인 요청
# 주의: 중요한 변경사항에 대해서는 false로 설정하여 사용자 승인을 받는 것을 권장합니다

# 상호작용 모드 설정
INTERACTIVE_MODE=true  # true: 카테고리 선택 UI 표시, false: 모든 카테고리 자동 분석
# true일 경우 에러 분류 후 사용자가 분석할 카테고리를 선택할 수 있습니다
# false일 경우 기존처럼 모든 카테고리를 자동으로 분석합니다